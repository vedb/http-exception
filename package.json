{
  "name": "http-exception",
  "version": "0.0.2",
  "description": "A small, easy-to-use, and dependency-free http errors library for Node",
  "main": "dist/index.js",
  "author": "Vedran Burdzovic",
  "license": "MIT",
  "repository": "https://github.com/vedrxn/http-exception.git",
  "scripts": {
    "build": "tsc",
    "format": "prettier --no-semi --single-quote --write './{src,test}/**/*.{js,ts}'",
    "lint": "tsc --noEmit",
    "test": "mocha -r ts-node/register"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --no-semi --single-quote --write",
      "git add"
    ]
  },
  "keywords": [
    "http",
    "error",
    "exception"
  ],
  "devDependencies": {
    "husky": "^4.0.6",
    "lint-staged": "^9.5.0",
    "lodash": "^4.17.15",
    "mocha": "^8.4.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.1",
    "typescript": "^3.7.4"
  }
}
